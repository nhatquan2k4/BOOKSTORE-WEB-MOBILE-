pipeline {
    agent any

    environment {
        SERVER_IP    = '192.168.0.102'
        REGISTRY_URL = '192.168.0.102:5000'
        IMAGE_NAME   = 'bookstore-backend'
        IMAGE_TAG    = "v${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker Build') {
            steps {
                dir('BE') {
                    sh """
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Push to Registry') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-registry',
                        usernameVariable: 'REG_USER',
                        passwordVariable: 'REG_PASS'
                    )
                ]) {
                    sh """
                        docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                        echo "${REG_PASS}" | docker login ${REGISTRY_URL} -u "${REG_USER}" --password-stdin
                        docker push ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Deploy to Windows via SSH') {
            steps {
                script {
                    sshagent(['ssh']) {
                        withCredentials([
                            usernamePassword(
                                credentialsId: 'docker-registry',
                                usernameVariable: 'REG_USER',
                                passwordVariable: 'REG_PASS'
                            )
                        ]) {
                            // Stop old container
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'docker stop bookstore-backend 2>nul || echo No container'"
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'docker rm bookstore-backend 2>nul || echo Removed'"
                            
                            // Start infrastructure
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'cd D:\\\\BOOKSTORE-WEB-MOBILE-\\\\BE\\\\docker && docker compose up -d'"
                            
                            // Login to registry  
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'echo ${REG_PASS} | docker login ${REGISTRY_URL} -u ${REG_USER} --password-stdin'"
                            
                            // Pull image
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'docker pull ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}'"
                            
                            // Deploy container
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'docker run -d --name bookstore-backend --network docker_bookstore-network -e ASPNETCORE_ENVIRONMENT=Development -p 3030:8080 ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}'"
                            
                            // Wait
                            sh "sleep 10"
                            
                            // Restart nginx
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'docker restart bookstore-nginx'"
                            
                            // Show containers
                            sh "ssh -o StrictHostKeyChecking=no jenkins_deploy@${SERVER_IP} 'docker ps --filter name=bookstore'"
                        }
                    }
                }
            }
        }
    }

    post {
        success { echo "Deploy success" }
        failure { echo "Pipeline lỗi – xem console log." }
    }
}
