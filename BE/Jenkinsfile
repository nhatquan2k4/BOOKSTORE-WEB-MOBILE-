pipeline {
    agent any

    environment {
        REGISTRY_URL = "192.168.0.100:5000"   // registry trên server
        IMAGE_NAME   = "bookstore-backend"
        IMAGE_TAG    = "lastest"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                    cd BE
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Push to Registry') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-registry',
                    usernameVariable: 'REG_USER',
                    passwordVariable: 'REG_PASS'
                )]) {
                    sh '''
                        docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}

                        echo "${REG_PASS}" | docker login ${REGISTRY_URL} -u "${REG_USER}" --password-stdin

                        docker push ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                    '''
                }
            }
        }

        stage('Deploy to Ubuntu Server') {
            steps {
                sshagent(credentials: ['ubuntu-server-ssh']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ubuntu@192.168.0.100 '
                            # Chạy docker-compose cho SQL + MinIO + Nginx trên SERVER
                            docker-compose -f /home/ubuntu/BE/docker/docker-compose.yml up -d

                            # Dừng container backend cũ (nếu có)
                            docker stop bookstore-backend || true
                            docker rm   bookstore-backend || true

                            # Pull image backend mới từ registry
                            docker pull ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}

                            # Chạy container backend mới
                            docker run -d \\
                                --name bookstore-backend \\
                                --network docker_bookstore-network \\
                                -e ASPNETCORE_ENVIRONMENT=Development \\
                                -e ConnectionStrings__UsersDb="Server=bookstore-sqlserver,1433;Database=BookStore;User Id=bookstoreUser;Password=BookstorePass1@;MultipleActiveResultSets=true;TrustServerCertificate=True" \\
                                -e MinIO__Endpoint=minio:9000 \\
                                -e MinIO__AccessKey=minioadmin \\
                                -e MinIO__SecretKey=minioadmin123 \\
                                -e MinIO__BucketName=bookstore-images \\
                                -e MinIO__UseSSL=false \\
                                -p 3030:8080 \\
                                ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                        '
                    """
                }
            }
        }
    }
}